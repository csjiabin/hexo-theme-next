// Custom styles.
body .bg-image {
  min-width: 100%;
  min-height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -2;
}

.divider{
  margin: 24px 18px;
  box-sizing: border-box;
  padding: 0;
  background: #eee;
  height: 1px
}

ul#awesomes-tabs{
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  padding-bottom: 20px;
  margin: 0 18px 20px;
  & li{
    display: inline-block;
    list-style:none;
    margin: 0 10px;
    a{
      text-decoration: none;
      padding: 5px 12px;
      border: 1px solid #eee
    }
    &.active{
      a{
        color: #fc6423;
        border-color: #fc6423
      }
    }
  }
}

ul#awesomes-content{
  li.awesomes-li{
    display: inline-block;
    list-style:none;
    margin: 0 .625em;
    padding: 1.25em 0;
    border-bottom: 1px dashed #eee
    a{
      text-decoration: none;
      display: flex;
      border: none;
      width:100%;
      box-sizing: border-box;
      align-items: center
    }
    .scord{
      // transform: scale(1.2);
      font-size: 1.5em
      width: 5em;
      text-align: center;
      padding: 0;
      margin: 0
    }
    .cover{
      margin: 0 1.25em;
      padding: 0;
      width: 4em;
      // max-width:100%;
      border: none;
    }
    .content{
      flex: 1;
      p{
        margin:12px 0;
        padding: 0;
        line-height: normal
      }
      .title{
        font-weight: 500;
        font-size: 1.2em
      }
      .desc{
        font-size: 0.8em;
        font-weight: normal
      }
    }
  }
}
@media (max-width: 767px) {
  ul#awesomes-content{
    li.awesomes-li{
      .scord{
        width: 2em
      }
      .cover{
        margin: 0 1em;
      }
    }
  }
}
